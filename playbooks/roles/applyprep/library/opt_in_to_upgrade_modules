import json
import os
import pipes
import socket
import stat

DOCUMENTATION = '''
---
'''

def main():
    module = AnsibleModule(
        argument_spec=dict(
            manifest=dict(required=False,
                 default='/opt/system-config/production/manifests/site.pp'
            )
        ),
    )
    p = module.params

    # Expect system-config to be cloned already
    opt_in_to_upgrade=False
    nodes = []
    node_pattern = re.compile('^node .*{')
    upgrade_pattern = re.compile('# Upgrade-Modules')
    hostname = socket.gethostname()
    with open(p['manifest'], 'r') as f:
        manifest = f.readlines()
    for number,line in enumerate(manifest):
        if node_pattern.match(line):
            node = line.split()[1].strip("'").strip('/')
            node_name = re.compile(node)
            if node_name.match(hostname):
                tag = manifest[number - 1]
                if upgrade_pattern.match(tag):
                    opt_in_to_upgrade=True
                    break

    module.exit_json(opt_in_to_upgrade=opt_in_to_upgrade)

# import module snippets
from ansible.module_utils.basic import *

main()
