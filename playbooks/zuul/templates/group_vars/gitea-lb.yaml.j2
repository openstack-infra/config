haproxy_listeners:
  - name: balance_git_http
    bind: *:80
    servers:
      - name: gitea01.opendev.org
        address: "{{ hostvars['gitea01.opendev.org']['nodepool']['public_ipv4']}}":80
  - name: balance_git_https
    bind: *:443
    servers:
      - name: gitea01.opendev.org
        address: "{{ hostvars['gitea01.opendev.org']['nodepool']['public_ipv4']}}":443
