description "load legacy cgconfig files"
author "Jeremy Stanley <fungi@yuggoth.org>"
start on started cgroup-lite
pre-start script
	export TMPDIR=/run
	TEMPCONF=`tempfile`
	# the cgroup-lite job takes care of the default mount now
	sed '/^mount {/,/}/d' /etc/cgconfig.conf > "$TEMPCONF"
	/usr/sbin/cgconfigparser -l "$TEMPCONF"
	rm "$TEMPCONF"
end script
