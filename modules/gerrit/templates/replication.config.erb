<% if replicate_github -%>
[remote "github"]
url = git@github.com:${name}.git
authGroup = Anonymous Users
replicatePermissions = false
mirror = true
<% end -%>

<% if replicate_local -%>
[remote "local"]
url = file:///var/lib/git/${name}.git
replicationDelay = 0
threads = 4
mirror = true
<% end -%>

<% replication_targets.each do |target| -%>
[remote "<%= target['name'] %>"]
<% target.each do |key, value| -%>
<% if key != 'name' -%>
<%= key %> = <%= value %>
<% end -%>
<% end -%>
