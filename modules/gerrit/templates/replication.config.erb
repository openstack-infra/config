<% if replicate_github -%>
[remote "github"]
url = git@github.com:${name}.git
authGroup = Anonymous Users
replicatePermissions = false
mirror = true
<% end -%>

<% giturl.each do |giturl| -%>
[remote "<%= giturl['name'] %>"]
url = "<%= giturl['url'] %>"
<% end -%>
replicationDelay = 0
threads = 4
mirror = true
<% end -%>
