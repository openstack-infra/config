<% if replicate_github -%>
[remote "github"]
url = git@github.com:${name}.git
authGroup = Anonymous Users
replicatePermissions = false
mirror = true
<% end -%>

<% if replicate_local -%>
[remote "local"]
url = file:///var/lib/git/${name}.git
replicationDelay = 0
threads = 4
mirror = true
<% end -%>

<% if replicate_cgit -%>
[remote "cgit"]
url = cgit@git.${domain}:/var/lib/git/${name}.git
replicationDelay = 0
threads = 4
mirror = true
<% end -%>

