<VirtualHost *:<%= @port %>>
    ServerName <%= @fqdn %>

    WSGIDaemonProcess puppetboard user=<%= @user %> group=<%= @group %> threads=5
    WSGIScriptAlias / <%= @docroot %>/wsgi.py

    <Directory <%= @docroot %>>
        WSGIProcessGroup <%= @group %>
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
        <IfVersion >= 2.4>
            Require all granted
        </IfVersion>
        Require all granted
    </Directory>
</VirtualHost>
