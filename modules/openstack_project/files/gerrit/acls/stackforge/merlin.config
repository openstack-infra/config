[access "refs/heads/*"]
abandon = group merlin-core
create = group merlin-milestone
label-Code-Review = -2..+2 group merlin-core
label-Workflow = -1..+1 group merlin-core

[access "refs/heads/proposed/*"]
abandon = group merlin-milestone
exclusiveGroupPermissions = abandon label-Code-Review label-Workflow
label-Code-Review = -2..+2 group merlin-milestone
label-Code-Review = -1..+1 group Registered Users
label-Workflow = -1..+1 group merlin-milestone

[access "refs/heads/release-*"]
abandon = group merlin-milestone
exclusiveGroupPermissions = abandon label-Code-Review label-Workflow
label-Code-Review = -2..+2 group merlin-milestone
label-Code-Review = -1..+1 group Registered Users
label-Workflow = -1..+1 group merlin-milestone

[access "refs/heads/stable/*"]
abandon = group merlin-milestone
exclusiveGroupPermissions = abandon label-Code-Review label-Workflow
label-Code-Review = -2..+2 group merlin-milestone
label-Code-Review = -1..+1 group Registered Users
label-Workflow = -1..+1 group merlin-milestone

[access "refs/tags/*"]
pushSignedTag = group merlin-milestone

[receive]
requireChangeId = true
requireContributorAgreement = true

[submit]
mergeContent = true
